<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info2</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= camp.image %>" alt="">
                <div class="caption">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= camp.name %></a></h4>
                    <p><%= camp.description %></p>
                    <p>Created By <em><%= camp.author.username %></em></p>
                   <% if(currentUser && camp.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-lg btn-info" href="/campground/<%=camp._id%>/edit">Edit</a>
                    <form class="delete-camp" action="/campground/<%=camp._id%>?_method=DELETE" method="POST" >
                        <button class="btn btn-lg btn-danger" type="submit">Delete</button>
                    </form>
                <%} %>                    
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-lg btn-success" href="/campground/<%=camp._id%>/comment/new">Add Comment</a>
                </div>
                <hr>
                <% camp.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                        <strong> <%= comment.author.username %></strong>
                            <span class="pull-right">10 Days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <%});%>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
