<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 style="text-align:center;">Add Comment to <%= camp.name %></h1>

      <form action="/campground/<%= camp._id %>/comment" method="post" style="width:30%; margin: 0 auto;">
        <div class="form-group">
          <label for="name">Comment</label>
          <input type="text" class="form-control" name="comment[text]" id="comment" placeholder="Enter the comment">
        </div>
        <p style="padding:10px;"></p>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block" type="submit" name="button">Submit</button>
        </div>
      </form>
    </div>
  </div>
<% include ../partials/footer %>
